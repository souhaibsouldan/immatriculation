<odoo>
    <record id="view_centre_impot_tree" model="ir.ui.view">
        <field name="name">centre.impot.list</field>
        <field name="model">centre.impot</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="adresse"/>
            </list>
        </field>
    </record>

    <record id="view_centre_impot_form" model="ir.ui.view">
        <field name="name">centre.impot.form</field>
        <field name="model">centre.impot</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="adresse"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

   
    <record model="ir.actions.act_window" id="action_centre_fiscale_tree">
        <field name="name">Centre</field>
        <field name="res_model">centre.impot</field>
        <field name="view_mode">list,form</field>
    </record>
    
    <menuitem name="Centre D'Impot" id="centre_tree" action="action_centre_fiscale_tree" parent="configuration_menu" sequence="5"/>
   
   
   
   
   
   </odoo>