<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Kanban View -->
    <record id="view_regime_fiscale_kanban" model="ir.ui.view">
        <field name="name">regime.fiscale.kanban</field>
        <field name="model">regime.fiscale</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="code"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <strong><field name="name"/></strong>
                            <div><span>Code: </span><field name="code"/></div>
                            <div><field name="description"/></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_regime_fiscale_tree" model="ir.ui.view">
        <field name="name">regime.fiscale.tree</field>
        <field name="model">regime.fiscale</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_regime_fiscale_form" model="ir.ui.view">
        <field name="name">regime.fiscale.form</field>
        <field name="model">regime.fiscale</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_regime_fiscale_search" model="ir.ui.view">
        <field name="name">regime.fiscale.search</field>
        <field name="model">regime.fiscale</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <field name="description"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_regime_fiscale" model="ir.actions.act_window">
        <field name="name">Régimes Fiscaux</field>
        <field name="res_model">regime.fiscale</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="search_view_id" ref="view_regime_fiscale_search"/>
    </record>

    <!-- Menuitem -->
    <menuitem id="regime_fiscale" name="Régimes Fiscaux" parent="configuration_menu" action="action_regime_fiscale" sequence="35"/>
</odoo>